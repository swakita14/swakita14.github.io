
@{
    ViewBag.Title = "ColorChooser";
}

<h2>Create a New Color</h2>

<p>Please enter color in HTML hexidecimal format: #AABBCC</p>
<br />


@using (Html.BeginForm("Foo", "Bar", FormMethod.Post, new { @class = "myForm" }))
{
    <div class="form-group">
        <label for="input-color1">First Color:</label>
        @Html.TextBox("input-color1", "Enter First Color", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="input-color2">Second Color:</label>
        @Html.TextBox("input-color2", "Enter Second Color", new { @class = "form-control" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>

}

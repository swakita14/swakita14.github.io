
@{
    ViewBag.Title = "Converter";
}


<h2>Convert Miles to Metric</h2>
<br />
<div class="container">
    <form id="input-form">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="miles-input">Miles:</label>
                    <input type="number" class="form-control" id="miles-input" placeholder="Enter Miles" required>
                    <br />
                </div>
            </div>
        </div>

       
            <div class="col">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                    <label class="form-check-label" for="exampleRadios1">
                        millimeters
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                    <label class="form-check-label" for="exampleRadios2">
                        centimeters
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                    <label class="form-check-label" for="exampleRadios2">
                        meters
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                    <label class="form-check-label" for="exampleRadios2">
                        kilometers
                    </label>
                </div>
         
        </div>
        <br />

        <button type="submit" class="btn btn-primary" id="btn">Convert</button>
    </form>
</div>



@model AuctionHouse.Models.ViewModels.AuctionVM

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Item</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.VmItem.Seller1.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VmItem.Seller1.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VmItem.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VmItem.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VmItem.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VmItem.Description)
        </dd>

    </dl>

        @if (ViewBag.hasbids)
        {
            <dl class="dl-horizontal" id="bid-section">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                @Html.Label("Buyer:")
                            </th>

                            <th scope="col">
                                @Html.Label("Bid Price:")
                            </th>


                    </thead>

                    @foreach (var items in Model.VMBid)
                    {
                        <tbody>
                            <tr>

                                <td>
                                    @Html.DisplayFor(item => items.Buyer)
                                </td>

                                <td>
                                    @String.Format("{0:C}", items.Price)
                                </td>



                            </tr>

                        </tbody>

                    }


                </table>

            </dl>
        }
</div>



